{
	"name": "input-material-ui",
	"version": "1.0.1",
	"description": "A material-ui INPUT component which allows to see/hide the password text of the field and to clear the input value",
	"main": "lib/index.js",
	"sideEffects": false,
	"scripts": {
		"build": "rimraf ./lib && tsc",
		"deploy": "cross-env NODE_ENV=production npm run build && npm publish",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iulian-radu-at/input-material-ui.git"
	},
	"files": [ "lib", "index.d.ts" ],
	"keywords": [
		"text",
		"input",
		"password",
		"material-ui",
		"input-material-ui",
		"react",
		"react-component",
		"ui",
		"material design"
	],
	"author": "Iulian Radu <iulian.radu@gmx.at>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/iulian-radu-at/input-material-ui/issues"
	},
	"homepage": "https://github.com/iulian-radu-at/input-material-ui#readme",
	"dependencies": {
		"@material-ui/core": "3.2.0",
		"@material-ui/icons": "3.0.1",
		"lodash": "4.17.11",
		"react": "16.5.2",
		"react-dom": "16.5.2"
	},
	"devDependencies": {
		"@types/babel-core": "6.25.5",
		"@types/enzyme": "3.1.14",
		"@types/enzyme-adapter-react-16": "1.0.3",
		"@types/lodash": "4.14.117",
		"@types/react": "16.4.16",
		"@types/react-dom": "16.0.9",
		"@types/rimraf": "2.0.2",
		"babel-core": "6.26.3",
		"babel-jest": "23.6.0",
		"cross-env": "5.2.0",
		"enzyme": "3.7.0",
		"enzyme-adapter-react-16": "1.6.0",
		"rimraf": "2.6.2",
		"typescript": "3.1.1"
	},
	"peerDependencies": {
		"react": "^16.0.0",
		"react-dom": "^16.0.0"
	},
	"jest": {
		"modulePathIgnorePatterns": [ "./node_modules", "./history" ],
		"transform": {
			"^.+\\.js$": "babel-jest"
		},
		"testRegex": "src/*(/(__tests?__/)([^_].*/)*?[^_][^/]*?\\.(test|spec)?\\.(js?))$",
		"setupFiles": [ "./enzymeAdapter.setup.js" ]
